FROM python:3.11-slim

# Install ping utilities (fping for high-performance bulk pinging)
RUN apt-get update && \
    apt-get install -y iputils-ping fping && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install Python dependencies
RUN pip install --no-cache-dir requests aiohttp

COPY device_monitor.py /app/

CMD ["python", "device_monitor.py"]
